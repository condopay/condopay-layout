generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BUILDING_MANAGER
  COUNSELOR
  RESIDENT
}

enum Status {
  ACTIVE
  INACTIVE
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

model User {
  id             String         @id @default(uuid())
  name           String
  email          String         @unique
  password       String
  avatar_url     String?
  document       String         @unique
  rg             String?
  ra             String?
  profession     String
  birth_date     DateTime
  phone1         String
  phone2         String?
  whatsapp       String?
  role           Role           @default(RESIDENT)
  status         Status         @default(ACTIVE)
  marital_status MaritalStatus?
  created_at     DateTime       @default(now())
  updated_at     DateTime       @updatedAt

  @@map("users")
}
